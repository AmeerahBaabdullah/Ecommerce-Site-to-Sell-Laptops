
@model IEnumerable<sell_laptop.Models.product>
@{
    ViewBag.Title = "Index";
}
@using (Html.BeginForm())
{

    <!-- SECTION -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <!-- shop -->
                <div class="col-md-4 col-xs-6">
                    <div class="shop">
                        <div class="shop-img">
                            <img src="~/img/shop01.png" alt="">
                        </div>
                        <div class="shop-body">
                            <h3>New Laptop<br>Collection</h3>
                            <a href="~/Home/Shop" class="cta-btn">Shop now <i class="fa fa-arrow-circle-right"></i></a>
                        </div>
                    </div>
                </div>
                <!-- /shop -->
                <!-- shop -->
                <div class="col-md-4 col-xs-6">
                    <div class="shop">
                        <div class="shop-img">
                            <img src="~/img/shop03.png" alt="">
                        </div>
                        <div class="shop-body">
                            <h3>Accessories<br>Collection</h3>
                            <a href="#" class="cta-btn">Shop now <i class="fa fa-arrow-circle-right"></i></a>
                        </div>
                    </div>
                </div>
                <!-- /shop -->
                <!-- shop -->
                <div class="col-md-4 col-xs-6">
                    <div class="shop">
                        <div class="shop-img"  width="900px">
                            <img src="~/img/shop022.png" alt="" style="width:290px">
                        </div>
                        <div class="shop-body">
                            <h3>2 In 1<br>Collection</h3>
                            <a href="#" class="cta-btn">Shop now <i class="fa fa-arrow-circle-right"></i></a>
                        </div>
                    </div>
                </div>
                <!-- /shop -->
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /SECTION -->
    <!-- SECTION -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">

                <!-- section title -->
                <div class="col-md-12">
                    <div class="section-title">
                        <h3 class="title"> Products</h3>

                    </div>
                </div>
                <!-- /section title -->
                <!-- Products tab & slick -->
                <div class="col-md-12">
                    <div class="row">
                        <div class="products-tabs">
                            <!-- tab -->
                            <div id="tab1" class="tab-pane active">
                                <div class="products-slick" data-nav="#slick-nav-1">
                                    @foreach (var item in Model)
                                    {

                                        <!-- product -->
                                        <div class="product">
                                            <div class="product-img">
                                                <img src="~/img/@item.pic" alt="" />
                                                <div class="product-label">
                                                    @if (item.offer != 0)
                                                    {

                                                        <span class="new">@Html.DisplayFor(modelItem => item.offer)%</span>

                                                    }

                                                    <span class="new">@Html.DisplayFor(modelItem => item.category)</span>
                                                </div>
                                            </div>
                                            <div class="product-body">
                                                <p class="product-category">Category</p>
                                                <h3 class="product-name"><a href="#">@item.name</a></h3>
                                                @if (item.offer != 0)
                                                {
                                                    int offer = @item.price - ((@item.price * @item.offer) / 100);
                                                    <h4 class="product-price">$@offer <del class="product-old-price">$@Html.DisplayFor(modelItem => item.price)</del></h4>
                                                }
                                                else
                                                {
                                                    <h4 class="product-price">$@Html.DisplayFor(modelItem => item.price)</h4>
                                                }

                                            <div class="product-btns" style="text-align:center">
                                                @Html.ActionLink("Details", "product", "Home", new { id = @item.id }, htmlAttributes: null)


                                            </div>
                                            </div>

                                            
                                            <div class="add-to-cart">
                                                @using (Html.BeginForm(
                                            "AddCart", "Home",
                                            new { p = @item.id, ch = 1 },
                                            FormMethod.Post, null
                                            ))
                                                {
                                                    <button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> add to cart</button>
                                                }

                                            </div>
                                        </div>
                                    }    <!-- /product -->
                                    <!-- Products tab & slick -->
                                </div>
                                <!-- /row -->
                            </div>
                            <!-- /container -->
                        </div>
                        <!-- /SECTION -->
                    </div>
                </div>
            </div>
        </div>
    </div>
}


