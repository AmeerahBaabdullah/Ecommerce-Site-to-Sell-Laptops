
@model IEnumerable<sell_laptop.Models.product>
@{
    ViewBag.Title = "Shop";
}


@using (Html.BeginForm())
{
    <!-- SECTION -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">


                <div id="store" class="col-sm-12">

                    <div class="row">
                        @foreach (var item in Model)
                        {

                            <!-- product -->
                            <div class="col-md-4 col-xs-6">
                                <div class="product">
                                    <div class="product-img">
                                        <img src="~/img/@item.pic" alt="" />

                                        <div class="product-label">
                                            @if (item.offer != 0)
                                            {

                                                <span class="new">@Html.DisplayFor(modelItem => item.offer)%</span>

                                            }

                                            <span class="new">@Html.DisplayFor(modelItem => item.category)</span>


                                        </div>

                                    </div>
                                    <div class="product-body">
                                        <p class="product-category">@Html.DisplayFor(modelItem => item.brand)</p>
                                        <h3 class="product-name"><a href="#">@Html.DisplayFor(modelItem => item.name)</a></h3>
                                        @if (item.offer != 0)
                                        {
                                            int offer = @item.price - ((@item.price * @item.offer) / 100);
                                            <h4 class="product-price">$@offer <del class="product-old-price">$@Html.DisplayFor(modelItem => item.price)</del></h4>
                                        }
                                        else
                                        {
                                            <h4 class="product-price">$@Html.DisplayFor(modelItem => item.price)</h4>
                                        }

                                        <div class="product-btns">
                                            @Html.ActionLink("Details", "product", "Home", new { id = @item.id }, htmlAttributes: null)


                                        </div>
                                    </div>

                                    <div class="add-to-cart">
                                        @using (Html.BeginForm(
                                        "AddCart", "Home",
                                        new { p = @item.id, ch = 1 },
                                        FormMethod.Post, null
                                        ))
                                        {
                                            <button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> add to cart</button>
                                        }

                                    </div>
                                </div>
                            </div>

                        }




                    </div>

                </div>


            </div>

        </div>
    </div>
}
@if (TempData["Message"] != null)
{
    TempData.Keep("Message");
